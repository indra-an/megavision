<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <title>Megavision Dashboard</title>

    <%= stylesheet_link_tag 'admins', :media => 'all', 'data-turbolinks-track' => 'false' %>
    <%= javascript_include_tag 'admins', 'data-turbolinks-track' => 'false' %>
    <%= yield :javascript %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to admins_dashboard_path, :class => 'navbar-brand' do %>
            <span>Megavision</span>Admin
          <% end %>
          <ul class="user-menu">
            <li class="dropdown pull-right">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <span class="glyphicon glyphicon-user"></span>
                <span id="admin-full-name"><%= current_admin.email %></span>&nbsp;<span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <%= link_to '#', :data => { :toggle => 'modal', :target => '#account-settings-dialog' } do %>
                    <span class="glyphicon glyphicon-cog"></span>&nbsp;Settings
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, :method => :delete do %>
                    <span class="glyphicon glyphicon-log-out"></span>&nbsp;Logout
                  <% end %>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
      <form role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Powered by GrowAntlers" disabled="true">
        </div>
      </form>

      <ul class="nav menu">
        <li class="<%= class_for_content_indicator(:dashboard, :index) %>">
          <%= link_to admins_dashboard_path do %>
            <span class="glyphicon glyphicon-dashboard"></span>&nbsp;Dashboard
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:channels) %>">
          <%= link_to admins_channels_path do %>
            <span class="glyphicon glyphicon-th"></span>&nbsp;Channel List
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:channel_groups) %>">
          <%= link_to admins_channel_groups_path do %>
            <span class="glyphicon glyphicon-th-large"></span>&nbsp;Channel Group
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:channel_types) %>">
          <%= link_to admins_channel_types_path do %>
            <span class="glyphicon glyphicon-tag"></span>&nbsp;Channel Type
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:channel_cities) %>">
          <%= link_to admins_channel_cities_path do %>
            <span class="glyphicon glyphicon-th-list"></span>&nbsp;Channel City List
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:prices) %>">
          <%= link_to admins_prices_path do %>
            <span class="glyphicon glyphicon-usd"></span>&nbsp;Price List
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:packages) %>">
          <%= link_to admins_packages_path do %>
            <span class="glyphicon glyphicon-folder-close"></span>&nbsp;Package
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:questions) %>">
          <%= link_to admins_questions_path do %>
            <span class="glyphicon glyphicon-question-sign"></span>&nbsp;Questions and Answers
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:vacancies) %>">
          <%= link_to admins_vacancies_path do %>
            <span class="glyphicon glyphicon-bullhorn"></span>&nbsp;Vacancy
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:landing_images) %>">
          <%= link_to admins_landing_images_path do %>
            <span class="glyphicon glyphicon-blackboard"></span>&nbsp;Landing Images
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:contacts) %>">
          <%= link_to admins_contacts_path do %>
            <span class="glyphicon glyphicon-envelope"></span>&nbsp;Contacts
          <% end %>
        </li>
        <li role="presentation" class="divider"></li>
        <li class="<%= class_for_content_indicator(:admins) %>">
          <%= link_to admins_admins_path do %>
            <span class="glyphicon glyphicon-user"></span>&nbsp;Admin Accounts
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:dashboard, :admin_logs) %>">
          <%= link_to admins_admin_logs_path do %>
            <span class="glyphicon glyphicon-user"></span>&nbsp;Admin Logs
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:area_coverages) %>">
          <%= link_to admins_area_coverages_path do %>
            <span class="glyphicon glyphicon-cloud"></span>&nbsp;Area Coverages
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:area_codes) %>">
          <%= link_to admins_area_codes_path do %>
            <span class="glyphicon glyphicon-cloud"></span>&nbsp;Area Codes
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:dashboard, :chats) %>">
          <%= link_to admins_chats_path do %>
            <span class="glyphicon glyphicon-cloud"></span>&nbsp;Support Chat
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:dashboard, :preferences) %>">
          <%= link_to admins_preferences_path do %>
            <span class="glyphicon glyphicon-wrench"></span>&nbsp;Preferences
          <% end %>
        </li>
        <li class="<%= class_for_content_indicator(:dashboard, :menu_settings) %>">
          <%= link_to admins_menu_settings_path do %>
            <span class="glyphicon glyphicon-wrench"></span>&nbsp;Menu Settings
          <% end %>
        </li>
      </ul>
    </div>

    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
      <%= yield %>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="account-settings-dialog" tabindex="-1" role="dialog" aria-labelledby="account-settings-label">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="account-settings-label">Account settings</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <%= form_tag admins_update_password_path, :class => 'form-inline', :method => :put, :remote => true do %>
                <%= password_field_tag :new_password, '', :class => 'form-control', :maxlength => 16, :placeholder => 'New Password' %>
                <%= password_field_tag :retype_new_password, '', :class => 'form-control', :maxlength => 16, :placeholder => 'Retype New Password' %>
                <%= submit_tag 'Update', :class => 'btn btn-primary' %>
                <span id="password-update-status"></span>
              <% end %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <% if notice %>
      <div class="alert alert-success notification" role="alert">
        <strong>Congratulations!</strong>&nbsp;<%= notice %>
      </div>
    <% end %>

    <% if flash[:error] %>
      <div class="alert alert-danger notification" role="alert">
        <%= flash[:error] %>
      </div>
    <% end %>
  </body>
</html>
