<% karir_list = "" %>
<% @vacancies.each do |vacancy| %>
  <% is_current_vacancy = vacancy.eql?(@vacancy) %>
  <% link_vacancy = is_current_vacancy ? "#" : public_job_vacancy_detail_path(vacancy.slug) %>
  <% is_active = is_current_vacancy ? 'active' : '' %>
  <% karir_list += @karir_list_html.render({"vacancy_link" => link_vacancy, "current_vacancy" => is_active, "vacancy_position" => vacancy.position, "vacancy_icon" => vacancy.icon_url}, { strict_variables: true }).html_safe %>
<% end %>

<% requirement_list = "" %>
<% @vacancy.requirements.each do |req| %>
  <% requirement_list += @karir_klasifikasi_html.render({"requirement" => req}, { strict_variables: true }).html_safe %>
<% end %>

<%=@karir_detail_html.render({"requirement_list" => requirement_list, "vacancy_detail_list" => karir_list, "vacancy_position" => @vacancy.position, "vacancy_location" => @vacancy.location}, { strict_variables: true }).html_safe %>
