<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Contacts' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">All Contact</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to 'https://mail.megavision.net.id', :class => 'btn btn-primary pull-right', :target => '_blank' do %>
            <span class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;Open Webmail
          <% end %>
          
          <%= link_to admins_contacts_path(format: :xlsx), :class => 'btn btn-success pull-left' do %>
            Export to Excel
          <% end %>

          <thead>
            <tr>
              <th>Name</th>
              <th>Subject</th>
              <th>Posted</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @contacts.empty? %>
              <tr>
                <td colspan="6">There is no contacts.</td>
              </tr>
            <% else %>
              <% @contacts.each do |contact| %>
                <tr>
                  <td><%= contact.name %></td>
                  <td><%= contact.subject %></td>
                  <td><%= contact.created_at.to_s %></td>
                  <td>
                    <%= link_to 'Show', admins_contact_path(contact) %>&nbsp;|
                    <%= link_to 'Destroy', admins_contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
