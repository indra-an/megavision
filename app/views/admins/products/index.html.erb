<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Products' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Product Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_product_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Product
          <% end %>

          <thead>
            <tr>
              <th>Title</th>
              <th>Status</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @products.empty? %>
              <tr>
                <td colspan="6">You have no Product. <%= link_to 'Create a new one!', new_admins_product_path %>.</td>
              </tr>
            <% else %>
              <% @products.each do |product| %>
                <tr>
                  <td><%= product.title %></td>
                  <td><%= product.is_active ? 'Active' : 'Inactive' %></td>
                  <td><%= product.created_at.to_s %></td>
                  <td>
                    <%= link_to 'Show', admins_product_path(product) %>&nbsp;|
                    <%= link_to 'Edit', edit_admins_product_path(product) %>&nbsp;|
                    <%= link_to 'Destroy', admins_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>&nbsp;|
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
