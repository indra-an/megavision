<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for([:admins, product], :html => { :class => 'form-horizontal' }) do |f| %>
          <% if product.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <strong>Ops! <%= pluralize(product.errors.count, "error") %> found:</strong><br/>
              <ul>
                <% product.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :title, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :title, :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :description, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_area :description, :class => 'form-control', :rows => 4 %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :icon, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-4">
              <% if product.try(:icon) %>
                <%= image_tag product.icon, :class => 'img-responsive img-thumbnail' %>
              <% end %>
              <%= f.file_field :icon %>
              <div> For better User Experience make sure your img size is 160x130px</div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :active, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.select :is_active, [['Yes', true], ['No', false]], {}, :class => 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 text-right">
              <%= link_to admins_products_path, :class => 'btn btn-warning' do %>
                <span class="glyphicon glyphicon-menu-left"></span>&nbsp;Back
              <% end %>
            </div>
            <div class="col-md-6 text-left">
              <%= f.submit 'Save', :class => 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
