<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Movie Schedules', admins_movie_schedules_path %>
    <%= breadcrumb_item 'Preview' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @movie_schedule.title %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= image_tag @movie_schedule.logo, :class => 'img-responsive img-thumbnail' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if @movie_schedule.schedule_attachment.present? %>
          <p><%= link_to 'Download Attachment', @movie_schedule.schedule_attachment_url %></p>
        <% else %>
          <p> No Attachment </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to admins_movie_schedules_path, :class => 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-menu-left"></span>&nbsp;Back
        <% end %>
        <%= link_to edit_admins_movie_schedule_path(@movie_schedule), :class => 'btn btn-info' do %>
          <span class="glyphicon glyphicon-pencil"></span>&nbsp;Edit
        <% end %>
      </div>
    </div>
  </div>
</div>
