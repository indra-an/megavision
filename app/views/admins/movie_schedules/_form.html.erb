<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for([:admins, movie_schedule], :html => { :class => 'form-horizontal' }) do |f| %>
          <% if movie_schedule.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <strong>Ops! <%= pluralize(movie_schedule.errors.count, "error") %> found:</strong><br/>
              <ul>
                <% movie_schedule.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :title, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :title, :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :logo, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-4">
              <% if movie_schedule.try(:logo) %>
                <%= image_tag movie_schedule.logo, :class => 'img-responsive img-thumbnail' %>
              <% end %>
              <%= f.file_field :logo %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :schedule_attachment, :class => 'col-sm-2 control-label' %>
            <div class="col-sm-4">
              <% if movie_schedule.try(:schedule_attachment) %>
                <%= link_to movie_schedule.schedule_attachment, :class => 'img-responsive img-thumbnail' %>
              <% end %>
              <%= f.file_field :schedule_attachment %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 text-right">
              <%= link_to admins_movie_schedules_path, :class => 'btn btn-warning' do %>
                <span class="glyphicon glyphicon-menu-left"></span>&nbsp;Back
              <% end %>
            </div>
            <div class="col-md-6 text-left">
              <%= f.submit 'Save', :class => 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
