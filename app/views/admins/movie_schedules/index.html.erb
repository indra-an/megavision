<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Movie Schedules' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Movie Schedule Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_movie_schedule_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Movie Schedule
          <% end %>

          <thead>
            <tr>
              <th>Title</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @movie_schedules.empty? %>
              <tr>
                <td colspan="6">You have no Movie Schedule. <%= link_to 'Create a new one!', new_admins_movie_schedule_path %>.</td>
              </tr>
            <% else %>
              <% @movie_schedules.each do |movie_schedule| %>
                <tr>
                  <td><%= movie_schedule.title %></td>
                  <td><%= movie_schedule.created_at.to_s %></td>
                  <td>
                    <%= link_to 'Show', admins_movie_schedule_path(movie_schedule) %>&nbsp;|
                    <%= link_to 'Edit', edit_admins_movie_schedule_path(movie_schedule) %>&nbsp;|
                    <%= link_to 'Destroy', admins_movie_schedule_path(movie_schedule), method: :delete, data: { confirm: 'Are you sure?' } %>&nbsp;|
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
