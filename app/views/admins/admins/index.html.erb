<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Admins' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Admins Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_admin_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Admin
          <% end %>

          <thead>
            <tr>
              <th>Email</th>
              <th>City</th>
              <th>Created At</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @admins.empty? %>
              <tr>
                <td colspan="3">You have no admins. <%= link_to 'Create a new one!', new_admins_admin_path %>.</td>
              </tr>
            <% else %>
              <% @admins.each do |admin| %>
                <tr>
                  <td><%= admin.email %></td>
                  <td><%= admin.channel_cities.collect(&:city).join(", ") %></td>
                  <td><%= admin.created_at.to_s %></td>
                  <td>
                    <% if admin.id.eql?(current_admin.id) %>
                      -
                    <% else %>
                      <%= link_to 'Destroy', admins_admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
