<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Menu Setting' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Menu Setting</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">

          <%#= link_to new_admins_menu_setting_path, :class => 'btn btn-success pull-right' do %>
            <%# <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Menu Setting %>
          <%# end %>

          <thead>
            <tr>
              <th>Menu</th>
              <th>Position</th>
              <th>Parent</th>
              <th>Control</th>
            </tr>
          </thead>

          <tbody>
            <% if @menu_settings.empty? %>
              <tr>
                <td colspan="5">You have no Menu Setting. <%= link_to 'Create a new one!', new_admins_menu_setting_path %>.</td>
              </tr>
            <% else %>
              <% @menu_settings.each do |menu| %>
                <tr>
                  <td><%= menu.menu %></td>
                  <td><%= menu.position %></td>
                  <td><%= (menu.parent_id) ? menu.menu_parent.menu : nil %></td>
                  <td>
                    <%= link_to 'Edit', edit_admins_menu_setting_path(menu) %>&nbsp;|
                    <%#= link_to 'Destroy', admins_menu_setting_path(menu), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
