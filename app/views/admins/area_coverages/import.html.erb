<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Area Coverages', admins_area_coverages_path %>
    <%= breadcrumb_item 'Import Area Coverage' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Import Area Coverage</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for([:admins, @area_coverage], url: import_area_admins_area_coverages_path, :html => { :class => 'form-horizontal' }) do |f| %>

          <div class="form-group">
            <%= f.label 'file', :class => 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.file_field :file, :class => 'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 text-right">
              <%= link_to admins_area_coverages_path, :class => 'btn btn-warning' do %>
                <span class="glyphicon glyphicon-menu-left"></span>&nbsp;Back
              <% end %>
            </div>
            <div class="col-md-4 text-left">
              <%= f.submit 'Import', :class => 'btn btn-primary' %>
            </div>
            <div class="col-md-4 text-right">
              <%= link_to download_template_admins_area_coverages_path, target: '_blank', :class => 'btn btn-success' do %>
                Download Template
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
